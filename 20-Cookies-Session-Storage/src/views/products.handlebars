<h2>Products:</h2>
<div class="portaCards">
{{#if products}}


{{#each products}}
<div class="card">
    <div class="card__img">
        <img src={{thumbnail.[0]}} alt="">
    </div>

    <div class="card__info">
       <h3>{{name}}</h3>
        <p>{{description}}</p> 
        <p class="price">&euro; {{price}}</p>
    </div>
    
    <button class="btn_comprar">Comprar</button>
    
</div>

{{/each}}

{{else}}
<p>No llega nada</p>

{{/if}}</div>