    {{!-- carrito x id --}}
    {{#if getCart}}
    <h2>Carts seleccionado:</h2>
    <h3>Productos Listados:</h3>
    <br>
        {{#each getCart}}
            <div class="purch__card">
                <p class="purch__card--id">ID: {{productId}}</p>
                <p class="purch__card--name">PROD: {{productName}}</p>
                <p class="purch__card--cant">CANT: {{quantity}}</p>
            </div>
        {{/each}}

    {{#else}}
    <p>VACIO / EMPTY :NO se han seleccionados productos:</p>
    {{/else}}
    {{/if}}